<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<faces-config>
   
  <lifecycle>
     <phase-listener>org.jboss.jsfunit.spy.data.SpyPhaseListener</phase-listener>
  </lifecycle>    
  
  <managed-bean>
     <managed-bean-name>spybackingbean</managed-bean-name>
     <managed-bean-class>org.jboss.jsfunit.spy.ui.SpyUIBackingBean</managed-bean-class>
     <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  
  <navigation-rule>
     <navigation-case>
        <from-outcome>spysessionexpired</from-outcome>
        <to-view-id>/jsfunit-spy-ui/index.xhtml</to-view-id>
     </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
     <from-view-id>/jsfunit-spy-ui/*</from-view-id>
     <navigation-case>
       <from-outcome>allsessions</from-outcome>
       <to-view-id>/jsfunit-spy-ui/index.xhtml</to-view-id>
     </navigation-case>
     <navigation-case>
       <from-outcome>sessionview</from-outcome>
       <to-view-id>/jsfunit-spy-ui/sessionview.xhtml</to-view-id>
     </navigation-case>
     <navigation-case>
       <from-outcome>scopesview</from-outcome>
       <to-view-id>/jsfunit-spy-ui/scopesview.xhtml</to-view-id>
     </navigation-case>
     <navigation-case>
       <from-outcome>httprequestview</from-outcome>
       <to-view-id>/jsfunit-spy-ui/httprequestview.xhtml</to-view-id>
     </navigation-case>
     <navigation-case>
       <from-outcome>perfview</from-outcome>
       <to-view-id>/jsfunit-spy-ui/perfview.xhtml</to-view-id>
     </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
     <from-view-id>/jsfunit-spy-ui/sessionview.xhtml</from-view-id>
     <navigation-case>
       <from-outcome>scopesview</from-outcome>
       <to-view-id>/jsfunit-spy-ui/scopesview.xhtml</to-view-id>
     </navigation-case>
     <navigation-case>
       <from-outcome>httprequestview</from-outcome>
       <to-view-id>/jsfunit-spy-ui/httprequestview.xhtml</to-view-id>
     </navigation-case>
     <navigation-case>
       <from-outcome>perfview</from-outcome>
       <to-view-id>/jsfunit-spy-ui/perfview.xhtml</to-view-id>
     </navigation-case>
  </navigation-rule>
</faces-config>
