<?xml version='1.0' encoding='UTF-8'?>


<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                                  http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">
   <application>
      <locale-config>
         <default-locale>en</default-locale>
      </locale-config>
   </application>

   <managed-bean>
      <managed-bean-name>customscopebean</managed-bean-name>
      <managed-bean-class>org.jboss.jsfunit.spy.test.customscope.CustomScopeBean</managed-bean-class>
      <managed-bean-scope>session</managed-bean-scope>
   </managed-bean>
   
   <managed-bean>
      <managed-bean-name>appscope1</managed-bean-name>
      <managed-bean-class>org.jboss.jsfunit.spy.test.TextBean</managed-bean-class>
      <managed-bean-scope>application</managed-bean-scope>
      <managed-property>
         <property-name>text</property-name>
         <property-class>java.lang.String</property-class>
         <value>application scope bean</value>
      </managed-property>
   </managed-bean>
   
   <managed-bean>
      <managed-bean-name>sessscope1</managed-bean-name>
      <managed-bean-class>org.jboss.jsfunit.spy.test.TextBean</managed-bean-class>
      <managed-bean-scope>session</managed-bean-scope>
      <managed-property>
         <property-name>text</property-name>
         <property-class>java.lang.String</property-class>
         <value>session scope bean</value>
      </managed-property>
   </managed-bean>
   
   <managed-bean>
      <managed-bean-name>reqscope1</managed-bean-name>
      <managed-bean-class>org.jboss.jsfunit.spy.test.TextBean</managed-bean-class>
      <managed-bean-scope>request</managed-bean-scope>
      <managed-property>
         <property-name>text</property-name>
         <property-class>java.lang.String</property-class>
         <value>request scope bean</value>
      </managed-property>
   </managed-bean>
</faces-config>
